<h1>New Recipe</h1>
<%= form_for :recipe, url: recipes_path do |f| %>
  <p>
    <%= f.label :ingredient %><br>
    <%= f.text_field :ingredient %>
  </p>

  <p>
    <%= f.label :instructions %><br>
    <%= f.text_area :instruction %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', recipes_path %>