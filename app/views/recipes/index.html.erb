<h1> My Recipes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Ingredients</th>
    <th>Instructions</th>
    <th colspan="2"></th>
  </tr>

  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.title %></td>
      <td><%= recipe.ingredient %></td>
      <td><%= recipe.instruction %></td>
      <td><%= link_to 'Show', recipe_path(recipe) %></td>
      <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
      <td><%= link_to 'Destroy', recipe_path(recipe),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Recipe', new_recipe_path %>
